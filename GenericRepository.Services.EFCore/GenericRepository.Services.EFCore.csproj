<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <PackageId>GenericRepository.Services.EFCore</PackageId>
    <Version>7.0.1</Version>
    <Authors>Ganușceac Vlad</Authors>
    <Product>GenericRepository.Services.EFCore</Product>
    <Title>GenericRepository.Services.EFCore</Title>
    <Description>Implements EF Core version of the GenericRepository's contracts.</Description>
    <RepositoryUrl>https://github.com/VladGanuscheak/GenericRepository.Services.EFCore</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>generic;repository;genericrepository;.net;dotnet;c#;contracts;services;efcore</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageIcon>logo.png</PackageIcon>
    <PackageIconUrl />
    <PackageReleaseNotes>Integrated the ExecuteDelete and ExecuteDeleteAsync methods of Microsoft.EntityFrameworkCore.Relational for performing Delete actions in this package.</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="GenericRepository.Contracts" Version="7.0.0" />
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="7.0.15" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Relational" Version="7.0.15" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\logo.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Update="GenericRepository_EF_Core.svg">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  
</Project>
